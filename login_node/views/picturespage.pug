		script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js')
	body(onload='displayGallery()').bits-body
		nav.navbar.navbar-inverse.bits-border-rounded.bits-navbar
			.container-fluid
				.navbar-header
					button.navbar-toggle.bits-navbar-collapse(type="button" data-toggle="collapse" data-target="#myNavbar")
						span.icon-bar.bits-navbar-collapse-span
						span.icon-bar.bits-navbar-collapse-span
						span.icon-bar.bits-navbar-collapse-span
					a.navbar-brand.bits-text(href="#") BitsAndBytes
				#myNavbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a.bits-text(href="/") Home
						if acctype === 'Admin'
							li
								a.bits-text(href="createsurvey") Create Survey
							li
								a.bits-text(href="photos") Photos
					ul.nav.navbar-nav.navbar-right
						li
							a.bits-text(href='/logout')
								span.glyphicon.glyphicon-log-out
								|  Log Out
		p#picnumber(hidden='' value='#{picnumber}')
		h2.container Pictures
		form#Picturesdemo.container
		form(action='/uploadPicture', enctype='multipart/form-data', method='POST')
			input(type='file', name='picture')
			input(type='submit', value='Upload a file')

		script.
			var pictures=document.getElementById(picnumber);
			var pic="picture";
			function displayGallery() {
				for(var v=1;v<=2;v++){
					var x = document.createElement("IMG");
					var dPrint=document.createElement("p");
					console.log(pictures);
					x.setAttribute("src", pic+v+".jpg");
					x.setAttribute("width", "304");
					x.setAttribute("height", "228");
					x.setAttribute("hspace", "20");
					x.setAttribute("vspace", "20");
					document.body.appendChild(x);
				}
			}
